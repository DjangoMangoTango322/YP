<Page x:Class="Desktop.Pages.DishesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="DishesPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🍕 Управление блюдами" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Управление меню всех ресторанов" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Добавить блюдо" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnAddDish_Click"/>
                    <Button Content="✏️ Изменить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnEditSelected_Click"/>
                    <Button Content="🗑️ Удалить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnDeleteSelected_Click"/>
                    <Button Content="🔄 Обновить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <DataGrid x:Name="DishesGrid" AutoGenerateColumns="False"
                         IsReadOnly="True" Background="Transparent"
                         BorderThickness="0" SelectionChanged="DishesGrid_SelectionChanged"
                         HorizontalScrollBarVisibility="Disabled"
                         CanUserResizeColumns="False"
                         CanUserSortColumns="True"
                         CanUserReorderColumns="False"
                         Width="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" CanUserResize="False"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="180" CanUserResize="False"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="250" CanUserResize="False"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat='{}{0}₽'}" Width="100" CanUserResize="False"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="140" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- User Controls Container -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,20,0,0" Padding="20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                <ItemsControl x:Name="DishesItemsControl" Loaded="DishesItemsControl_Loaded">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource CardBrush}" CornerRadius="12" 
                                   Padding="20" Margin="0,0,0,10" Cursor="Hand"
                                   MouseEnter="DishCard_MouseEnter"
                                   MouseLeave="DishCard_MouseLeave"
                                   MouseLeftButtonDown="DishCard_MouseLeftButtonDown">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                  Foreground="{StaticResource TextBrush}" 
                                                  FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" 
                                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                                  FontSize="12" Margin="0,2,0,0"
                                                  TextTrimming="CharacterEllipsis"
                                                  MaxWidth="300"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="💰 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding Price, StringFormat={}{0}₽}" 
                                                      FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="   📁 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding Category}" 
                                                      FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="8,4">
                                            <TextBlock Text="{Binding Price, StringFormat={}{0}₽}" 
                                                      Foreground="White" FontSize="12" FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="{Binding Id, StringFormat=#{0}}" 
                                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                                  FontSize="10" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>