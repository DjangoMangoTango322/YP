<Page x:Class="Desktop.Pages.DishesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="DishesPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🍕 Управление блюдами" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Управление меню всех ресторанов" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Добавить блюдо" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnAddDish_Click"/>
                    <Button Content="✏️ Изменить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnEditSelected_Click"/>
                    <Button Content="🗑️ Удалить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnDeleteSelected_Click"/>
                    <Button Content="🔄 Обновить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <DataGrid x:Name="DishesGrid" AutoGenerateColumns="False"
                         IsReadOnly="True" Background="Transparent"
                         BorderThickness="0" SelectionChanged="DishesGrid_SelectionChanged"
                         HorizontalScrollBarVisibility="Disabled"
                         CanUserResizeColumns="False"
                         CanUserSortColumns="True"
                         CanUserReorderColumns="False"
                         Width="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" CanUserResize="False"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="180" CanUserResize="False"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="250" CanUserResize="False"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat='{}{0}₽'}" Width="100" CanUserResize="False"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="140" CanUserResize="False"/>
                        <DataGridTextColumn Header="Ресторан" Binding="{Binding RestaurantName}" Width="160" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- Empty Grid for Item Output -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                CornerRadius="8" Margin="0,200,0,0" Padding="15">
            <Grid x:Name="ItemOutputGrid">
                <!-- Пустой Grid для вывода item из БД -->
            </Grid>
        </Border>
    </Grid>
</Page>
