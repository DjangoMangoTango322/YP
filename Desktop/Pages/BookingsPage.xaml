<Page x:Class="Desktop.Pages.BookingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="BookingsPage">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📅 Управление бронированиями" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Управление всеми бронированиями ресторанов" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Добавить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnAddBooking_Click"/>
                    <Button Content="✏️ Изменить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnEditSelected_Click"/>
                    <Button Content="🗑️ Удалить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnDeleteSelected_Click"/>
                    <Button Content="🔄 Обновить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <DataGrid x:Name="BookingsGrid" AutoGenerateColumns="False"
                         IsReadOnly="True" Background="Transparent"
                         BorderThickness="0" SelectionChanged="BookingsGrid_SelectionChanged"
                         HorizontalScrollBarVisibility="Disabled"
                         CanUserResizeColumns="False"
                         CanUserSortColumns="True"
                         CanUserReorderColumns="False"
                         Width="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" CanUserResize="False"/>
                        <DataGridTextColumn Header="Клиент ID" Binding="{Binding UserId}" Width="80" CanUserResize="False"/>
                        <DataGridTextColumn Header="Ресторан ID" Binding="{Binding RestaurantId}" Width="80" CanUserResize="False"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding BookingDate, StringFormat=dd.MM.yyyy}" Width="90" CanUserResize="False"/>
                        <DataGridTextColumn Header="Время" Binding="{Binding BookingTime, StringFormat=hh\\:mm}" Width="70" CanUserResize="False"/>
                        <DataGridTextColumn Header="Гостей" Binding="{Binding NumberOfGuests}" Width="70" CanUserResize="False"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100" CanUserResize="False"/>
                        <DataGridTextColumn Header="Создано" Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy HH:mm}" Width="120" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- User Controls Container -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,20,0,0" Padding="20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                <ItemsControl x:Name="BookingsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource CardBrush}" CornerRadius="12" 
                                   Padding="20" Margin="0,0,0,10" Cursor="Hand"
                                   MouseEnter="BookingCard_MouseEnter"
                                   MouseLeave="BookingCard_MouseLeave"
                                   MouseLeftButtonDown="BookingCard_MouseLeftButtonDown">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding UserId, StringFormat=Клиент ID: {0}}" 
                                                  Foreground="{StaticResource TextBrush}" 
                                                  FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding RestaurantId, StringFormat=Ресторан ID: {0}}" 
                                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                                  FontSize="12" Margin="0,2,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="📅 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding BookingDate, StringFormat=dd.MM.yyyy}" 
                                                      FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="   🕒 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding BookingTime, StringFormat=hh\\:mm}" 
                                                      FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="   👥 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding NumberOfGuests}" 
                                                      FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <Border x:Name="StatusBorder" CornerRadius="8" Padding="8,4">
                                            <TextBlock Text="{Binding Status}" 
                                                      Foreground="White" FontSize="10" FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="{Binding Id, StringFormat=#{0}}" 
                                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                                  FontSize="10" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>