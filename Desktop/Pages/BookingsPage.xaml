<Page x:Class="Desktop.Pages.BookingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="BookingsPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📅 Управление бронированиями" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Управление всеми бронированиями ресторанов" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Создать бронирование" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnCreateBooking_Click"/>
                    <Button Content="🔄 Обновить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" 
                CornerRadius="8" Margin="0,0,0,15" Padding="15">
            <StackPanel>
                <TextBlock Text="Фильтры" FontWeight="Bold" Margin="0,0,0,10"
                          Foreground="{StaticResource TextBrush}"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Дата с:" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <DatePicker x:Name="DateFrom" Width="130" Margin="0,5,0,0"
                                   SelectedDateChanged="DateFilter_Changed"/>
                    </StackPanel>

                    <StackPanel Margin="15,0,0,0">
                        <TextBlock Text="Дата по:" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <DatePicker x:Name="DateTo" Width="130" Margin="0,5,0,0"
                                   SelectedDateChanged="DateFilter_Changed"/>
                    </StackPanel>

                    <StackPanel Margin="15,0,0,0">
                        <TextBlock Text="Ресторан:" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="CmbRestaurantFilter" Width="160" Height="36" 
                                 Margin="0,5,0,0" DisplayMemberPath="Name"
                                 SelectionChanged="RestaurantFilter_Changed"/>
                    </StackPanel>

                    <StackPanel Margin="15,0,0,0">
                        <TextBlock Text="Статус:" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="CmbStatusFilter" Width="130" Height="36" 
                                 Margin="0,5,0,0" SelectionChanged="StatusFilter_Changed">
                            <ComboBoxItem Content="Все" IsSelected="True"/>
                            <ComboBoxItem Content="confirmed"/>
                            <ComboBoxItem Content="pending"/>
                            <ComboBoxItem Content="cancelled"/>
                        </ComboBox>
                    </StackPanel>

                    <Button Content="🗑️ Сбросить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="15,20,0,0"
                           Click="BtnResetFilters_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <DataGrid x:Name="BookingsGrid" AutoGenerateColumns="False"
                     IsReadOnly="True" Background="Transparent">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Клиент" Binding="{Binding UserName}" Width="180"/>
                    <DataGridTextColumn Header="Ресторан" Binding="{Binding RestaurantName}" Width="180"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding BookingDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                    <DataGridTextColumn Header="Время" Binding="{Binding BookingTime}" Width="80"/>
                    <DataGridTextColumn Header="Гостей" Binding="{Binding NumberOfGuests}" Width="70"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Создано" Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                    <DataGridTemplateColumn Header="Действия" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✅" ToolTip="Подтвердить" 
                                           Click="BtnConfirm_Click" Margin="2"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="6" FontSize="10"
                                           Visibility="{Binding ShowConfirmButton}"/>
                                    <Button Content="❌" ToolTip="Отменить" 
                                           Click="BtnCancel_Click" Margin="2"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="6" FontSize="10"/>
                                    <Button Content="👁️" ToolTip="Просмотр" 
                                           Click="BtnView_Click" Margin="2"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="6" FontSize="10"/>
                                    <Button Content="✏️" ToolTip="Редактировать" 
                                           Click="BtnEdit_Click" Margin="2"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="6" FontSize="10"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Statistics -->
        <Border Grid.Row="3" Background="{StaticResource CardBrush}" 
                CornerRadius="8" Margin="0,15,0,0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="6" Padding="12,8" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Всего бронирований:" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtTotalBookings" Margin="5,0,0,0" Foreground="{StaticResource AccentBrush}" 
                                  FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border Background="#27AE60" CornerRadius="6" Padding="12,8" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Подтверждено:" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtConfirmedCount" Margin="5,0,0,0" Foreground="White" 
                                  FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border Background="#F39C12" CornerRadius="6" Padding="12,8" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Ожидание:" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtPendingCount" Margin="5,0,0,0" Foreground="White" 
                                  FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border Background="#E74C3C" CornerRadius="6" Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Отменено:" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtCancelledCount" Margin="5,0,0,0" Foreground="White" 
                                  FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
