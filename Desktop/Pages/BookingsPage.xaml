<Page x:Class="Desktop.Pages.BookingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d"
      Title="BookingsPage"
      Loaded="Page_Loaded">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,16,16,12" Padding="24,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="📅 Управление бронированиями"
                              Foreground="{StaticResource TextBrush}"
                              FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="Управление всеми бронированиями ресторанов"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              FontSize="13" Margin="0,4,0,0"/>
                    <!-- Search Box -->
                    <Grid Margin="0,12,0,0">
                        <TextBox x:Name="SearchTextBox"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 TextChanged="SearchTextBox_TextChanged"
                                 Padding="32,8,12,8" Height="36"
                                 VerticalAlignment="Center"
                                 BorderThickness="1" BorderBrush="{StaticResource TextSecondaryBrush}"
                                 Background="{StaticResource CardBrush}"
                                 
                                 FontSize="13"/>
                        <TextBlock Text="🔍 Поиск по ID, статусу..." 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  FontSize="13" VerticalAlignment="Center"
                                  Margin="12,0,0,0" IsHitTestVisible="False"/>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Добавить"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="8,0,0,0"
                           Click="BtnAddBooking_Click"
                           Padding="12,6" Height="23" Width="71"/>
                    <Button Content="Изменить"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="8,0,0,0"
                           Click="BtnEditSelected_Click"
                           Padding="12,6" Height="26" Width="72"/>
                    <Button Content="Удалить"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="8,0,0,0"
                           Click="BtnDeleteSelected_Click"
                           Padding="12,6"/>
                    <Button Content="Обновить"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="8,0,0,0"
                           Click="BtnRefresh_Click"
                           Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Content -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,0,16,12" Padding="1">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <DataGrid x:Name="BookingsGrid" 
                      ItemsSource="{Binding FilteredBookings}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True" Background="Transparent"
                      BorderThickness="0" SelectionChanged="BookingsGrid_SelectionChanged"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      CanUserResizeColumns="False"
                      CanUserSortColumns="True"
                      CanUserReorderColumns="False"
                      HeadersVisibility="Column"
                      RowHeight="36"
                      FontSize="13">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" CanUserResize="False"/>
                    <DataGridTextColumn Header="Клиент ID" Binding="{Binding UserId}" Width="100" CanUserResize="False"/>
                    <DataGridTextColumn Header="Ресторан ID" Binding="{Binding RestaurantId}" Width="100" CanUserResize="False"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding BookingDate, StringFormat=dd.MM.yyyy}" Width="70" CanUserResize="False"/>
                    <DataGridTextColumn Header="Время" Binding="{Binding BookingTime, StringFormat=hh\\:mm}" Width="70" CanUserResize="False"/>
                    <DataGridTextColumn Header="Гостей" Binding="{Binding NumberOfGuests}" Width="70" CanUserResize="False"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100" CanUserResize="False"/>
                    <DataGridTextColumn Header="Создано" Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy HH:mm}" Width="130" CanUserResize="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <!-- Cards Container -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,0,16,16" Padding="20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Карточки бронирований"
                          Foreground="{StaticResource TextBrush}"
                          FontSize="14" FontWeight="SemiBold"
                          Margin="0,0,0,12"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="280">
                    <ItemsControl x:Name="BookingsItemsControl" 
                                  ItemsSource="{Binding FilteredBookings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource CardBrush}"
                                       CornerRadius="10"
                                       Padding="16"
                                       Margin="0,0,0,8"
                                       Cursor="Hand"
                                       MouseEnter="BookingCard_MouseEnter"
                                       MouseLeave="BookingCard_MouseLeave"
                                       MouseLeftButtonDown="BookingCard_MouseLeftButtonDown">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Left Content -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding UserId, StringFormat='Клиент #{0}'}"
                                                      Foreground="{StaticResource TextBrush}"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding RestaurantId, StringFormat='Ресторан #{0}'}"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      FontSize="12"
                                                      Margin="0,2,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                                    <TextBlock Text="📅" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding BookingDate, StringFormat=dd.MM.yyyy}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                                    <TextBlock Text="🕒" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding BookingTime, StringFormat=hh\\:mm}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="👥" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding NumberOfGuests}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text=" гостей"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <!-- Right Content -->
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                                            <Border x:Name="StatusBorder"
                                                   CornerRadius="6"
                                                   Padding="8,4"
                                                   Background="{StaticResource PrimaryBrush}">
                                                <TextBlock Text="{Binding Status}"
                                                          Foreground="White"
                                                          FontSize="11"
                                                          FontWeight="SemiBold"
                                                          HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      FontSize="10"
                                                      Margin="0,6,0,0"
                                                      HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>