<Page x:Class="Desktop.Pages.BookingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:items="clr-namespace:Desktop.Pages.Items"
      mc:Ignorable="d"
      Title="BookingsPage"
      Loaded="Page_Loaded">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header (ваш код) -->
        <!-- ... -->

        <!-- DataGrid -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,0,16,12" Padding="1">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <DataGrid x:Name="BookingsGrid"
                      ItemsSource="{Binding FilteredBookings}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True" Background="Transparent"
                      BorderThickness="0"
                      SelectionChanged="BookingsGrid_SelectionChanged"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      CanUserResizeColumns="False"
                      CanUserSortColumns="True"
                      CanUserReorderColumns="False"
                      HeadersVisibility="Column"
                      RowHeight="36"
                      FontSize="13">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Пользователь" Binding="{Binding User_Id}" Width="180"/>
                    <DataGridTextColumn Header="Ресторан" Binding="{Binding Restaurant_Id}" Width="200"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Booking_Date, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="160"/>
                    <DataGridTextColumn Header="Гостей" Binding="{Binding Number_Of_Guests}" Width="80"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Карточки -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,0,16,16" Padding="20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Карточки бронирований"
                           Foreground="{StaticResource TextBrush}"
                           FontSize="14" FontWeight="SemiBold"
                           Margin="0,0,0,12"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="280">
                    <ItemsControl ItemsSource="{Binding FilteredBookings}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <items:BookingCard Margin="12"
                                                   Booking="{Binding}"
                                                   IsSelected="{Binding IsSelected, Mode=TwoWay}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border x:Name="LoadingOverlay" Grid.RowSpan="3"
                Background="#80000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳ Загрузка..." Foreground="White" FontSize="16"
                           FontWeight="Bold"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10"
                             Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>