<Page x:Class="Desktop.Pages.AddEditUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
            mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditUser">

    <Grid Background="{StaticResource BackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="PageTitle" Text="👥 Добавление пользователя" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Заполните информацию о пользователе" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="💾 Сохранить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="Save_Click" Width="120" Height="35"/>
                    <!--<Button Content="❌ Отмена" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Click="Cancel_Click" 
                           Margin="10,0,0,0" Width="100" Height="35"/>-->
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="{StaticResource CardBrush}" 
                    CornerRadius="12" Padding="30">
                <Border.Effect>
                    <StaticResource ResourceKey="ShadowEffect"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- First Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Имя *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="FirstName" Height="40" Padding="12" FontSize="14"
                                Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <!-- Last Name -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="LastName" Height="40" Padding="12" FontSize="14"
                                Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <!-- Email -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Login *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="Login" Height="40" Padding="12" FontSize="14"
                                Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <!-- Phone -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Телефон *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="3" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="Phone" Height="40" Padding="12" FontSize="14"
                                Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Password *" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="5" Grid.Column="1" BorderBrush="#404040" 
                            BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <PasswordBox x:Name="Password" Height="40" Padding="8" FontSize="14"
                                 Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                 BorderThickness="0" Tag="Пароль">
                        </PasswordBox>
                        
                    </Border>
                    
                                <!-- Error Message -->
                    <Border x:Name="ErrorBorder" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                           Background="#5A0000" CornerRadius="6" Padding="12,8" 
                           Margin="0,10,0,0" Visibility="Collapsed">
                        <TextBlock x:Name="TxtError" Foreground="#FF6B6B" 
                                  TextWrapping="Wrap" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="3" 
               Background="#80000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳ Сохранение..." Foreground="White" FontSize="16" 
                          FontWeight="Bold" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" 
                            Margin="0,10,0,0" Background="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>