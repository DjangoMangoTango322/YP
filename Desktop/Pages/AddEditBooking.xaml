<Page x:Class="Desktop.Pages.AddEditBooking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditBooking">
    <Grid Background="{StaticResource BackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="PageTitle" Text="📅 Добавление бронирования"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Выберите пользователя, ресторан и укажите детали"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" Content="💾 Сохранить"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Save_Click" Width="120" Height="35"/>
            </Grid>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="{StaticResource CardBrush}"
                    CornerRadius="12" Padding="30">
                <Border.Effect>
                    <StaticResource ResourceKey="ShadowEffect"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Пользователь -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Пользователь *"
                               Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="#404040"
                            BorderThickness="1" CornerRadius="6" Margin="0,0,0,20">
                        <ComboBox x:Name="UserComboBox" 
                                  SelectedValuePath="Id"
                                  Height="40" FontSize="14" Padding="12"
                                  Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                  BorderThickness="0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Last_Name}" FontWeight="Bold"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding First_Name}"/>
                                        <Run Text=" (тел: "/>
                                        <Run Text="{Binding Phone}"/>
                                        <Run Text=", ID: "/>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=")"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>

                    <!-- Ресторан -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Ресторан *"
                               Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="#404040"
                            BorderThickness="1" CornerRadius="6" Margin="0,0,0,20">
                        <ComboBox x:Name="RestaurantComboBox" 
                                  SelectedValuePath="Id"
                                  Height="40" FontSize="14" Padding="12"
                                  Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                  BorderThickness="0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Name}" FontWeight="Bold"/>
                                        <Run Text=" (адрес: "/>
                                        <Run Text="{Binding Address}"/>
                                        <Run Text=", ID: "/>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=")"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>

                    <!-- Дата -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата бронирования *"
                               Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="#404040"
                            BorderThickness="1" CornerRadius="6" Margin="0,0,0,20">
                        <DatePicker x:Name="BookingDatePicker" 
                                    Height="40" FontSize="14" Padding="10"
                                    Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                    BorderThickness="0"/>
                    </Border>

                    <!-- Гости -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Количество гостей *"
                               Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="3" Grid.Column="1" BorderBrush="#404040"
                            BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="GuestsTxt" Height="40" Padding="12" FontSize="14"
                                 Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                 BorderThickness="0"/>
                    </Border>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="3"
                Background="#80000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳ Сохранение..." Foreground="White" FontSize="16"
                           FontWeight="Bold" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10"
                             Margin="0,10,0,0" Background="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
