<UserControl x:Class="Desktop.Pages.Items.UserCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.Pages.Items"
            mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="400"
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown">

    <Border x:Name="MainBorder" Background="{StaticResource CardBrush}" 
            CornerRadius="12" Padding="20" Margin="0,0,0,10"
            Cursor="Hand">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding FirstName}" 
                          Foreground="{StaticResource TextBrush}" 
                          FontSize="16" FontWeight="Bold"/>

                <TextBlock Text="{Binding LastName}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontSize="12" Margin="0,2,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="📧 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding Email}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>

                    <TextBlock Text="   📞 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding Phone}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontSize="10"/>

                <TextBlock Text="{Binding Id, StringFormat=ID: #{0}}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
