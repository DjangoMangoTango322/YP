<UserControl x:Class="Desktop.Pages.Items.BookingCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="220" d:DesignWidth="300"
             Cursor="Hand"
             MouseLeftButtonDown="BookingCard_MouseLeftButtonDown">

    <Border Background="{StaticResource CardBrush}"
            CornerRadius="12"
            Padding="20"
            Margin="10"
            BorderThickness="3">
        <Border.Effect>
            <StaticResource ResourceKey="ShadowEffect"/>
        </Border.Effect>

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                        <Setter Property="Opacity" Value="0.9"/>
                    </DataTrigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.85"/>
                        <Setter Property="BorderBrush" Value="#666666"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="{Binding Id, StringFormat='Бронирование №{0}'}"
                       Foreground="{StaticResource TextBrush}"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock Grid.Row="1" 
                       Text="{Binding User_Id, StringFormat='Пользователь ID: {0}'}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="14" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="2" 
                       Text="{Binding Restaurant_Id, StringFormat='Ресторан ID: {0}'}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="14" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="3" 
                       Text="{Binding Booking_Date, StringFormat='Дата: {0:dd.MM.yyyy HH:mm}'}"
                       Foreground="{StaticResource TextBrush}"
                       FontSize="15" FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBlock Grid.Row="4" 
                       Text="{Binding Number_Of_Guests, StringFormat='Гостей: {0}'}"
                       Foreground="{StaticResource TextBrush}"
                       FontSize="15" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="5" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Text="{Binding Status}"
                       FontSize="14"
                       FontWeight="Bold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="Ожидание">
                                <Setter Property="Foreground" Value="#FFB84D"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Подтверждено">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Отменено">
                                <Setter Property="Foreground" Value="#F44336"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Завершено">
                                <Setter Property="Foreground" Value="#2196F3"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>