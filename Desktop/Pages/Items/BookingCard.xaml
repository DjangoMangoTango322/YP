<UserControl x:Class="Desktop.Pages.Items.BookingCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.Pages.Items"
             mc:Ignorable="d" 
            d:DesignHeight="100" d:DesignWidth="400">

    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#FF3A3A3A"/>
                    <Setter Property="BorderBrush" Value="#FF0078D7"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2D2D2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource CardStyle}" Cursor="Hand">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding Booking.ClientName}" 
                          Foreground="{StaticResource TextBrush}" 
                          FontSize="16" FontWeight="Bold"/>

                <TextBlock Text="{Binding Booking.RestaurantName}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontSize="12" Margin="0,2,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="📅 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding Booking.BookingDate, StringFormat=dd.MM.yyyy}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>

                    <TextBlock Text="   🕒 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding Booking.BookingTime, StringFormat=hh\\:mm}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>

                    <TextBlock Text="   👥 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding Booking.NumberOfGuests}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <Border Background="{Binding StatusColor}" CornerRadius="8" Padding="8,4">
                    <TextBlock Text="{Binding Booking.Status}" 
                              Foreground="White" FontSize="10" FontWeight="Bold"/>
                </Border>

                <TextBlock Text="{Binding Booking.Id, StringFormat=#{0}}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
