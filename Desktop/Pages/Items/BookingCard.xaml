<UserControl x:Class="Desktop.Pages.Items.BookingCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.Pages.Items"
            mc:Ignorable="d" 
           
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown">

    <Border x:Name="MainBorder" Background="{StaticResource CardBrush}" 
            CornerRadius="12" Padding="20" Margin="0,0,0,10"
            Cursor="Hand">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding ClientName}" 
                          Foreground="{StaticResource TextBrush}" 
                          FontSize="16" FontWeight="Bold"/>

                <TextBlock Text="{Binding RestaurantName}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontSize="12" Margin="0,2,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Height="12">
                    <TextBlock Text="📅 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding BookingDate, StringFormat=dd.MM.yyyy}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>

                    <TextBlock Text="   🕒 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding BookingTime, StringFormat=hh\\:mm}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>

                    <TextBlock Text="   👥 " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding NumberOfGuests}" 
                              FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <Border x:Name="StatusBorder" CornerRadius="8" Padding="8,4">
                    <TextBlock Text="{Binding Status}" 
                              Foreground="White" FontSize="10" FontWeight="Bold"/>
                </Border>

                <TextBlock Text="{Binding Id, StringFormat=#{0}}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
