<Page x:Class="Desktop.Pages.RestaurantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d"
      Title="RestaurantsPage"
      Loaded="Page_Loaded">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,16,16,12" Padding="24,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="🍽️ Управление ресторанами"
                              Foreground="{StaticResource TextBrush}"
                              FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="Управление всеми ресторанами системы"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              FontSize="13" Margin="0,4,0,0"/>
                    <!-- Search Box -->
                    <Grid Margin="0,12,0,0">
                        <TextBox x:Name="SearchTextBox"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 TextChanged="SearchTextBox_TextChanged"
                                 Padding="32,8,12,8" Height="36"
                                 VerticalAlignment="Center"
                                 BorderThickness="1" BorderBrush="{StaticResource TextSecondaryBrush}"
                                 Background="{StaticResource CardBrush}"
                                 FontSize="13"/>
                        <TextBlock Text="🔍 Поиск по названию, адресу..." 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  FontSize="13" VerticalAlignment="Center"
                                  Margin="12,0,0,0" IsHitTestVisible="False"/>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Добавить"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="0,0,8,0"
                           Click="BtnAddRestaurant_Click" Padding="12,6" Width="97"/>
                    <Button Content="✏️ Изменить"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="0,0,8,0"
                           Click="BtnEditSelected_Click" Padding="12,6" Width="104"/>
                    <Button Content="🗑️ Удалить"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,8,0"
                           Click="BtnDeleteSelected_Click" Padding="12,6"/>
                    <Button Content="🔄 Обновить"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,0,0"
                           Click="BtnRefresh_Click" Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Content -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,0,16,12" Padding="1">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <DataGrid x:Name="RestaurantsGrid" 
                      ItemsSource="{Binding FilteredRestaurants}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True" Background="Transparent"
                      BorderThickness="0" SelectionChanged="RestaurantsGrid_SelectionChanged"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      CanUserResizeColumns="False"
                      CanUserSortColumns="True"
                      CanUserReorderColumns="False"
                      HeadersVisibility="Column"
                      RowHeight="36"
                      FontSize="13">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" CanUserResize="False"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="180" CanUserResize="False"/>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="220" CanUserResize="False"/>
                    <DataGridTextColumn Header="Вместимость" Binding="{Binding Capacity}" Width="90" CanUserResize="False"/>
                    <DataGridTextColumn Header="Открытие" Binding="{Binding OpenTime, StringFormat=hh\\:mm}" Width="80" CanUserResize="False"/>
                    <DataGridTextColumn Header="Закрытие" Binding="{Binding CloseTime, StringFormat=hh\\:mm}" Width="80" CanUserResize="False"/>
                    <DataGridTextColumn Header="Тематика" Binding="{Binding Tematic}" Width="140" CanUserResize="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <!-- Cards Container -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}"
                CornerRadius="12" Margin="16,0,16,16" Padding="20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Карточки ресторанов"
                          Foreground="{StaticResource TextBrush}"
                          FontSize="14" FontWeight="SemiBold"
                          Margin="0,0,0,12"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="280">
                    <ItemsControl x:Name="RestaurantsItemsControl" 
                                  ItemsSource="{Binding FilteredRestaurants}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource CardBrush}" CornerRadius="10"
                                       Padding="16"
                                       Margin="0,0,0,8" Cursor="Hand"
                                       MouseEnter="RestaurantCard_MouseEnter"
                                       MouseLeave="RestaurantCard_MouseLeave"
                                       MouseLeftButtonDown="RestaurantCard_MouseLeftButtonDown">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                      Foreground="{StaticResource TextBrush}"
                                                      FontSize="14" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Address}"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      FontSize="12" Margin="0,2,0,0"
                                                      TextTrimming="CharacterEllipsis"
                                                      MaxWidth="300"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                                    <TextBlock Text="👥" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Capacity}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text=" мест"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                                    <TextBlock Text="🕒" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding OpenTime, StringFormat=hh\\:mm}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text=" - "
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding CloseTime, StringFormat=hh\\:mm}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🏷️" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Tematic}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                                            <!--<Border Background="{StaticResource PrimaryBrush}" CornerRadius="6" Padding="8,4">
                                                <TextBlock Text="{Binding Capacity}"
                                                          Foreground="White" FontSize="11" FontWeight="SemiBold"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text=" мест"
                                                          Foreground="White" FontSize="11" FontWeight="SemiBold"
                                                          HorizontalAlignment="Center"/>
                                            </Border>-->
                                            <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      FontSize="10" Margin="0,6,0,0"
                                                      HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>