<Page x:Class="Desktop.Pages.RestaurantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="RestaurantsPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🍽️ Управление ресторанами" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Управление всеми ресторанами системы" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Добавить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnAddRestaurant_Click"/>
                    <Button Content="🔄 Обновить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <DataGrid x:Name="RestaurantsGrid" AutoGenerateColumns="False"
                     IsReadOnly="True" Background="Transparent">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="180"/>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="220"/>
                    <DataGridTextColumn Header="Вместимость" Binding="{Binding Capacity}" Width="90"/>
                    <DataGridTextColumn Header="Открытие" Binding="{Binding OpenTime}" Width="90"/>
                    <DataGridTextColumn Header="Закрытие" Binding="{Binding CloseTime}" Width="90"/>
                    <DataGridTextColumn Header="Тематика" Binding="{Binding Tematic}" Width="140"/>
                    <DataGridTemplateColumn Header="Действия" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️" ToolTip="Редактировать" 
                                           Click="BtnEdit_Click" Margin="4,0"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="8" FontSize="12"/>
                                    <Button Content="🗑️" ToolTip="Удалить" 
                                           Click="BtnDelete_Click" Margin="4,0"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="8" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
