<Page x:Class="Desktop.Pages.AchievementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AchievementsPage">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🏆 Достижения пользователей" FontSize="28" FontWeight="Bold" 
                   Margin="20" Foreground="#333"/>

        <DataGrid x:Name="AchievementsGrid" Grid.Row="1" Margin="20" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Background="White" BorderBrush="#DDD" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding UserName}" Width="200"/>
                <DataGridTextColumn Header="Ачивка" Binding="{Binding AchievementName}" Width="200" FontWeight="Bold"/>
                <DataGridTextColumn Header="Дата получения" Binding="{Binding UnlockedAt, StringFormat=dd.MM.yyyy HH:mm}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
