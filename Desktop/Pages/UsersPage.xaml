<Page x:Class="Desktop.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="UsersPage">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="👥 Управление пользователями" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Управление пользователями системы" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Добавить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnAddUser_Click" Width="102"/>
                    <Button Content="✏️ Изменить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnEditSelected_Click" Width="95"/>
                    <Button Content="🗑️ Удалить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnDeleteSelected_Click"/>
                    <Button Content="🔄 Обновить" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False"
                         IsReadOnly="True" Background="Transparent"
                         BorderThickness="0" SelectionChanged="UsersGrid_SelectionChanged"
                         HorizontalScrollBarVisibility="Disabled"
                         CanUserResizeColumns="False"
                         CanUserSortColumns="True"
                         CanUserReorderColumns="False"
                         Width="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" CanUserResize="False"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120" CanUserResize="False"/>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120" CanUserResize="False"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200" CanUserResize="False"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="140" CanUserResize="False"/>
                        <DataGridTextColumn Header="Дата регистрации" 
                                           Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" 
                                           Width="120" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- User Controls Container -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,20,0,0" Padding="20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                <ItemsControl x:Name="UsersItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <items:UserCard 
                                MouseLeftButtonDown="UserCard_MouseLeftButtonDown"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
