<Page x:Class="Desktop.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="UsersPage">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="👥 Управление пользователями" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Управление пользователями и администраторами системы" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➕ Добавить пользователя" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnAddUser_Click"/>
                    <Button Content="📊 Экспорт в CSV" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="10,0,0,0"
                           Click="BtnExport_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" 
                CornerRadius="8" Margin="0,0,0,15" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtSearch" Width="280" Height="36" 
                        Padding="12" TextChanged="TxtSearch_TextChanged"
                        Tag="Поиск по имени или email..."/>

                <ComboBox x:Name="CmbRoleFilter" Width="160" Height="36" 
                         Margin="15,0,0,0" SelectionChanged="CmbRoleFilter_SelectionChanged">
                    <ComboBoxItem Content="Все роли" IsSelected="True"/>
                    <ComboBoxItem Content="Администратор"/>
                    <ComboBoxItem Content="Пользователь"/>
                </ComboBox>

                <Button Content="🗑️ Сбросить фильтры" 
                       Style="{StaticResource SecondaryButtonStyle}"
                       Margin="15,0,0,0"
                       Click="BtnResetFilters_Click"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False"
                     IsReadOnly="True" Background="Transparent">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="120"/>
                    <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="80"/>
                    <DataGridTextColumn Header="Дата регистрации" 
                                       Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" 
                                       Width="120"/>
                    <DataGridTemplateColumn Header="Действия" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="👁️" ToolTip="Просмотр" 
                                           Click="BtnView_Click" Margin="2"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="6" FontSize="10"/>
                                    <Button Content="✏️" ToolTip="Редактировать" 
                                           Click="BtnEdit_Click" Margin="2"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="6" FontSize="10"/>
                                    <Button Content="🔒" ToolTip="Блокировка" 
                                           Click="BtnToggleActive_Click" Margin="2"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="6" FontSize="10"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Statistics -->
        <Border Grid.Row="3" Background="{StaticResource CardBrush}" 
                CornerRadius="8" Margin="0,15,0,0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="6" Padding="12,8" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Всего пользователей:" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtTotalUsers" Margin="5,0,0,0" Foreground="{StaticResource AccentBrush}" 
                                  FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border Background="#27AE60" CornerRadius="6" Padding="12,8" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Администраторов:" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtAdminCount" Margin="5,0,0,0" Foreground="White" 
                                  FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border Background="#3498DB" CornerRadius="6" Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Активных:" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtActiveCount" Margin="5,0,0,0" Foreground="White" 
                                  FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
