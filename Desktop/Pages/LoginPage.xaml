<Page x:Class="Desktop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Border Width="420" Height="500" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{StaticResource CardBrush}"
                BorderBrush="#444444" BorderThickness="1" 
                CornerRadius="12">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <StackPanel Margin="40" VerticalAlignment="Center">
                <!-- Header -->
                <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                    <TextBlock Text="Gourmet" 
                              Foreground="{StaticResource AccentBrush}" 
                              FontSize="28" FontWeight="Bold"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Booking System" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="16" FontWeight="Medium"
                              HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <Border Height="2" Background="{StaticResource PrimaryBrush}" 
                           Margin="0,15,0,0" Width="60" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Login Form -->
                <TextBlock Text="Email" Margin="0,10,0,8" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontWeight="SemiBold" FontSize="13"/>
                <TextBox x:Name="TxtEmail" Height="42" 
                        FontSize="14" Padding="12"
                        KeyDown="TxtEmail_KeyDown"/>

                <TextBlock Text="Пароль" Margin="0,15,0,8" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          FontWeight="SemiBold" FontSize="13"/>
                <PasswordBox x:Name="TxtPassword" Height="42" 
                            FontSize="14" Padding="12"
                            KeyDown="TxtPassword_KeyDown"/>

                <!-- Login Button -->
                <Button x:Name="BtnLogin" Content="Войти в систему" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Height="46" FontSize="15" FontWeight="Bold"
                       Margin="0,30,0,15"
                       Click="BtnLogin_Click"/>

                <!-- Register Link -->
                <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0"
                          Foreground="{StaticResource TextSecondaryBrush}">
                    <Run Text="Нет аккаунта?"/>
                    <Hyperlink x:Name="LinkRegister" Click="LinkRegister_Click">
                        Зарегистрироваться
                    </Hyperlink>
                </TextBlock>

                <!-- Error Message -->
                <Border x:Name="ErrorBorder" Background="#5A0000" 
                       CornerRadius="6" Padding="12,8" Margin="0,15,0,0"
                       Visibility="Collapsed">
                    <TextBlock x:Name="TxtError" Foreground="#FF6B6B" 
                              TextWrapping="Wrap" FontSize="12"
                              FontWeight="SemiBold"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
