<Page x:Class="Desktop.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="RegisterPage" Height="621" >

    <Grid Background="{StaticResource BackgroundBrush}">
        <Border Width="440" Height="620"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{StaticResource CardBrush}"
                BorderBrush="#444444" BorderThickness="1" 
                CornerRadius="12">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                <StackPanel Margin="30" VerticalAlignment="Center">
                    <!-- Header -->
                    <StackPanel Margin="0,0,0,25" HorizontalAlignment="Center">
                        <TextBlock Text="Регистрация" 
                                  Foreground="{StaticResource AccentBrush}" 
                                  FontSize="24" FontWeight="Bold"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="нового пользователя" 
                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                  FontSize="16" FontWeight="Medium"
                                  HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <Border Height="2" Background="{StaticResource PrimaryBrush}" 
                               Margin="0,15,0,0" Width="80" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Registration Form -->
                    <TextBlock Text="Имя" Margin="0,0,0,8" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontWeight="SemiBold" FontSize="13"/>
                    <Border BorderBrush="#404040" BorderThickness="1" CornerRadius="4">
                        <TextBox x:Name="TxtFirstName" Height="38" 
                                FontSize="14" Padding="10"
                                KeyDown="TextBox_KeyDown"
                                Background="#2A2A2A"
                                Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Фамилия" Margin="0,15,0,8" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontWeight="SemiBold" FontSize="13"/>
                    <Border BorderBrush="#404040" BorderThickness="1" CornerRadius="4">
                        <TextBox x:Name="TxtLastName" Height="38" 
                                FontSize="14" Padding="10"
                                KeyDown="TextBox_KeyDown"
                                Background="#2A2A2A"
                                Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Email" Margin="0,15,0,8" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontWeight="SemiBold" FontSize="13"/>
                    <Border BorderBrush="#404040" BorderThickness="1" CornerRadius="4">
                        <TextBox x:Name="TxtEmail" Height="38" 
                                FontSize="14" Padding="10"
                                KeyDown="TextBox_KeyDown"
                                Background="#2A2A2A"
                                Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Телефон" Margin="0,15,0,8" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontWeight="SemiBold" FontSize="13"/>
                    <Border BorderBrush="#404040" BorderThickness="1" CornerRadius="4">
                        <TextBox x:Name="TxtPhone" Height="38" 
                                FontSize="14" Padding="10"
                                KeyDown="TextBox_KeyDown"
                                Background="#2A2A2A"
                                Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <!-- Password Field -->
                    <TextBlock Text="Пароль" Margin="0,15,0,8" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontWeight="SemiBold" FontSize="13"/>
                    <Border BorderBrush="#404040" BorderThickness="1">
                        <PasswordBox x:Name="TxtPassword" Height="38" 
                                    FontSize="14" Padding="10"
                                    KeyDown="PasswordBox_KeyDown"
                                    Background="#2A2A2A"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderThickness="0"/>
                    </Border>

                    <!-- Confirm Password Field -->
                    <TextBlock Text="Подтверждение пароля" Margin="0,15,0,8" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontWeight="SemiBold" FontSize="13"/>
                    <Border BorderBrush="#404040" BorderThickness="1">
                        <PasswordBox x:Name="TxtConfirmPassword" Height="38" 
                                    FontSize="14" Padding="10"
                                    KeyDown="PasswordBox_KeyDown"
                                    Background="#2A2A2A"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderThickness="0"/>
                    </Border>

                    <!-- Register Button -->
                    <Button x:Name="BtnRegister" Content="Зарегистрировать" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Height="44" FontSize="15" FontWeight="Bold"
                           Margin="0,30,0,15"
                           Click="BtnRegister_Click"/>

                    <!-- Back to Login -->
                    <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0"
                              Foreground="{StaticResource TextSecondaryBrush}" FontSize="13">
                        <Hyperlink x:Name="LinkLogin" Click="LinkLogin_Click">
                            Назад к входу
                        </Hyperlink>
                    </TextBlock>

                    <!-- Error Message -->
                    <Border x:Name="ErrorBorder" Background="#5A0000" 
                           CornerRadius="6" Padding="12,8" Margin="0,15,0,0"
                           Visibility="Collapsed">
                        <TextBlock x:Name="TxtError" Foreground="#FF6B6B" 
                                  TextWrapping="Wrap" FontSize="12"
                                  FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
