<Page x:Class="Desktop.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Menu -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryDarkBrush}">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="8" Opacity="0.4" BlurRadius="20"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" 
                        Height="100">
                    <StackPanel VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="Gourmet" 
                                 Foreground="{StaticResource AccentBrush}" 
                                 FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="Booking System" 
                                 Foreground="White" 
                                 FontSize="14" FontWeight="Medium"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Grid.Row="1" Margin="10,20">
                    <Button x:Name="BtnHome" Content="🏠 Главная" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="BtnHome_Click"/>
                    <Button x:Name="BtnRestaurants" Content="🍽️ Рестораны" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="BtnRestaurants_Click"/>
                    <Button x:Name="BtnDishes" Content="🍕 Блюда" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="BtnDishes_Click"/>
                    <Button x:Name="BtnUsers" Content="👥 Пользователи" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="BtnUsers_Click"/>
                    <Button x:Name="BtnBookings" Content="📅 Бронирования" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="BtnBookings_Click"/>
                </StackPanel>

                <!-- User Info & Logout -->
                <Border Grid.Row="2" Margin="15" Background="Transparent">
                    <StackPanel>
                        <TextBlock x:Name="TxtUserInfo" Text="Пользователь: Администратор"
                                  Foreground="White" FontSize="12" TextWrapping="Wrap"
                                  Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <Button x:Name="BtnLogout" Content="🚪 Выход" 
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"
                                BorderThickness="0" Height="40" FontSize="14"
                                Click="BtnLogout_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#A52A2A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Welcome Section (только когда не выбрана страница) -->
                <Border x:Name="WelcomeSection" Grid.Row="0" Grid.RowSpan="2"
                        Background="{StaticResource BackgroundBrush}"
                        Visibility="Visible">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                               Margin="40">
                        <TextBlock Text="👋 Добро пожаловать!" 
                                  Foreground="{StaticResource TextBrush}" 
                                  FontSize="28" FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  HorizontalAlignment="Center"/>

                        <TextBlock x:Name="TxtAdminGreeting" 
                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                  FontSize="18"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  Margin="0,0,0,30"
                                  MaxWidth="400"/>

                        <Border Background="{StaticResource CardBrush}" 
                               CornerRadius="12" Padding="20"
                               Margin="0,20,0,0"
                               HorizontalAlignment="Center">
                            <Border.Effect>
                                <StaticResource ResourceKey="ShadowEffect"/>
                            </Border.Effect>
                            <StackPanel>

                                <TextBlock Text="Система управления ресторанами" 
                                          Foreground="{StaticResource TextSecondaryBrush}" 
                                          FontSize="14"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Frame for pages (скрыт по умолчанию) -->
                <Frame x:Name="MainFrame" Grid.Row="0" Grid.RowSpan="2"
                       NavigationUIVisibility="Hidden"
                       Background="Transparent"
                       Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Page>
