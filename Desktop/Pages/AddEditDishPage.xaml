<Page x:Class="Desktop.Pages.AddEditDishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditDishPage">

    <Grid Background="{StaticResource BackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="25,20">
            <Border.Effect>
                <StaticResource ResourceKey="ShadowEffect"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="PageTitle" Text="🍕 Добавление блюда" 
                              Foreground="{StaticResource TextBrush}" 
                              FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Заполните информацию о блюде" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="💾 Сохранить" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnSave_Click" Width="120" Height="35"/>
                    <Button Content="❌ Отмена" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Click="BtnCancel_Click" 
                           Margin="10,0,0,0" Width="100" Height="35"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="{StaticResource CardBrush}" 
                    CornerRadius="12" Padding="30">
                <Border.Effect>
                    <StaticResource ResourceKey="ShadowEffect"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Название блюда *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="TxtName" Height="40" Padding="12" FontSize="14"
                                Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"/>
                    </Border>

                    <!-- Description -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Описание *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Top" Margin="0,10,20,0"/>
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="TxtDescription" Height="80" Padding="12" FontSize="14"
                                Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                BorderThickness="0" TextWrapping="Wrap" AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>
                    </Border>

                    <!-- Price -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Цена (₽) *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <TextBox x:Name="TxtPrice" Height="40" Padding="12" FontSize="14"
                                Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                BorderThickness="0" PreviewTextInput="DecimalPreviewTextInput"/>
                    </Border>

                    <!-- Category -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Категория *" 
                              Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Border Grid.Row="3" Grid.Column="1" BorderBrush="#404040" 
                           BorderThickness="1" CornerRadius="6" Margin="0,0,0,15">
                        <ComboBox x:Name="CmbCategory" Height="40" Padding="8" FontSize="14"
                                 Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                                 BorderThickness="0">
                            <ComboBoxItem Content="Закуски"/>
                            <ComboBoxItem Content="Салаты"/>
                            <ComboBoxItem Content="Супы"/>
                            <ComboBoxItem Content="Основные блюда"/>
                            <ComboBoxItem Content="Гарниры"/>
                            <ComboBoxItem Content="Десерты"/>
                            <ComboBoxItem Content="Напитки"/>
                            <ComboBoxItem Content="Алкогольные напитки"/>
                        </ComboBox>
                    </Border>

                    <!-- Error Message -->
                    <Border x:Name="ErrorBorder" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                           Background="#5A0000" CornerRadius="6" Padding="12,8" 
                           Margin="0,10,0,0" Visibility="Collapsed">
                        <TextBlock x:Name="TxtError" Foreground="#FF6B6B" 
                                  TextWrapping="Wrap" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="3" 
               Background="#80000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳ Сохранение..." Foreground="White" FontSize="16" 
                          FontWeight="Bold" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" 
                            Margin="0,10,0,0" Background="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
